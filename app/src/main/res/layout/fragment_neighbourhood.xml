<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amzn_blue"
    android:orientation="vertical"
    tools:context="com.wuujcik.prg14.MainActivity">


    <FrameLayout style="@style/CategoryStyleFrame">

        <Button
            style="@style/CategoryStyleInside"
            android:onClick="button_neighbour_fittness"
            android:text="Fitnesses and gyms" />
    </FrameLayout>

    <FrameLayout style="@style/CategoryStyleFrame">

        <Button
            style="@style/CategoryStyleInside"
            android:onClick="button_neighbour_atm"
            android:text="ATMs" />
    </FrameLayout>

    <FrameLayout style="@style/CategoryStyleFrame">

        <Button
            style="@style/CategoryStyleInside"
            android:onClick="button_neighbour_currency"
            android:text="Currency Exchange" />
    </FrameLayout>

    <FrameLayout style="@style/CategoryStyleFrame">

        <Button
            style="@style/CategoryStyleInside"
            android:onClick="button_neighbour_medical"
            android:text="Medical help" />
    </FrameLayout>

    <FrameLayout style="@style/CategoryStyleFrame">

        <Button
            style="@style/CategoryStyleInside"
            android:onClick="button_button_neighbour_post_office"
            android:text="Post offices" />
    </FrameLayout>


</LinearLayout>