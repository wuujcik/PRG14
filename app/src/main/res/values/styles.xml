<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent ="@android:style/TextAppearance">
        <item name="android:textColor">@color/amzn_yellow</item>
        <item name="android:textStyle">bold</item>
    </style>
<style name="super_title">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textSize">18sp</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:layout_marginBottom">8dp</item>
</style>
    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="title_list">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>

    </style>
    <style name="text_list">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="text_open_link">
        <item name="android:textColor">@color/amzn_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

</resources>
