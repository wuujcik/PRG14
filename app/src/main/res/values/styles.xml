<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/amzn_darkest</item>
        <item name="colorPrimaryDark">@color/amzn_navy</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/amzn_yellow</item>
    </style>

    <style name="AppTheme.Main">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <!-- THIS is where you can color the AppBar text -->
        <item name="android:textColor">@color/amzn_yellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="super_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/amzn_yellow</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/amzn_navy</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/amzn_darkest</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="title_list">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/amzn_navy</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

    </style>

    <style name="text_list">
        <item name="android:textColor">@color/amzn_darkest</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="text_open_link">
        <item name="android:textColor">@color/amzn_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="CategoryStyleFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/layout_background</item>

    </style>

    <style name="CategoryStyleInside">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/amzn_darkest</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="LocationCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/layout_background</item>
    </style>

    <style name="directionsButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:src">@drawable/icon_click_xml</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

</resources>
